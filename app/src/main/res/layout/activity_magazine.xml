                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/shopLogo6"
                    android:layout_gravity="center"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>